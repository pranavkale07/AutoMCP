			"name": "Download MCP Server Package",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/download/{{package_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"download",
						"{{package_id}}"
					]
				},
				"description": "Download the generated MCP server package as a ZIP file. The package contains a complete, ready-to-use MCP server."
			},
			"response": []
		},
