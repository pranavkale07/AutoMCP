							"mode": "formdata",
							"formdata": [
								{
									"key": "file",
									"type": "file",
									"src": [],
									"description": "Upload pet-store-openapi.json"
								}
							]
						},
						"url": {
							"raw": "{{base_url}}/api/upload",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"upload"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Generate MCP Server",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.data && response.data.packageId) {",
									"        pm.collectionVariables.set('package_id', response.data.packageId);",
									"        console.log('‚úÖ MCP server generated!');",
