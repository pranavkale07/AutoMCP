								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/generate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"generate"
							]
						}
					},
					"response": []
