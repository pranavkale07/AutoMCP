							"raw": "{{base_url}}/api/status/{{package_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"status",
								"{{package_id}}"
							]
						}
					},
					"response": []
				},
				{
					"name": "4. Download Package",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/download/{{package_id}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"download",
								"{{package_id}}"
							]
						}
					},
					"response": []
				}
